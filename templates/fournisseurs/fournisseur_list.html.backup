{% load static %}
<!DOCTYPE html>
<html lang="fr" x-data="{ search: '', mobileMenuOpen: false }" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des fournisseurs - ParcInfo</title>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{% static 'css/parcinfo-ui.css' %}">
    <link rel="stylesheet" href="{% static 'react/assets/index.css' %}">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .dashboard-gradient-bg {
            background: linear-gradient(120deg, #f0f4ff 0%, #e0e7ff 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .nav-link {
            transition: all 0.2s ease;
        }
        .nav-link:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(4px);
        }
    </style>
</head>
<body class="dashboard-gradient-bg min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg border-b border-gray-200" x-data="{ mobileMenuOpen: false }">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo et titre -->
                <div class="flex items-center space-x-4">
                    <img src="{% static 'images/ADD.png' %}" alt="ADD Logo" class="h-10 w-auto">
                    <span class="text-xl font-bold text-gray-900">ParcInfo</span>
                </div>
                
                <!-- Menu desktop -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="{% url 'users:profil' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mon profil</a>
                    
                    <!-- Menu selon le r√¥le -->
                    {% if user.groups.all %}
                        {% for group in user.groups.all %}
                            {% if group.name == 'Gestionnaire Bureau' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link text-indigo-600 bg-indigo-50 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Fournisseurs</a>
                                <a href="{% url 'commandes_bureau:liste_commandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Commandes Bureau</a>
                                <a href="{% url 'materiel_bureautique:liste_materiels' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mat√©riel Bureautique</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Traiter Demandes</a>
                            {% elif group.name == 'Gestionnaire Informatique' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link text-indigo-600 bg-indigo-50 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Fournisseurs</a>
                                <a href="{% url 'materiel_informatique:liste_materiels' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mat√©riel Informatique</a>
                                <a href="{% url 'commandes_informatique:liste_commandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Commandes IT</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Traiter Demandes</a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    <a href="{% url 'materiel_informatique:mes_equipements_informatiques' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mes √©quipements IT</a>
                    <a href="{% url 'materiel_bureautique:mes_equipements_bureautiques' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mes √©quipements Bureau</a>
                    <a href="{% url 'users:dashboard_garantie' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">üõ°Ô∏è Dashboard Garantie</a>
                    <a href="{% url 'chatbot:chatbot-ui' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Chatbot IA</a>
                    
                    <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="text-red-600 hover:text-red-800 font-medium transition">Se d√©connecter</a>
                </div>
                
                <!-- Bouton menu mobile -->
                <div class="md:hidden">
                    <button @click="mobileMenuOpen = !mobileMenuOpen"
                            class="text-gray-700 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-inset rounded-md p-2">
                        <svg class="w-6 h-6" :class="{'hidden': mobileMenuOpen, 'block': !mobileMenuOpen}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                        <svg class="w-6 h-6" :class="{'block': mobileMenuOpen, 'hidden': !mobileMenuOpen}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Menu mobile -->
            <div x-show="mobileMenuOpen"
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0 transform scale-95"
                 x-transition:enter-end="opacity-100 transform scale-100"
                 x-transition:leave="transition ease-in duration-150"
                 x-transition:leave-start="opacity-100 transform scale-100"
                 x-transition:leave-end="opacity-0 transform scale-95"
                 class="md:hidden border-t border-gray-200">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="{% url 'users:profil' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mon profil</a>
                    
                    {% if user.groups.all %}
                        {% for group in user.groups.all %}
                            {% if group.name == 'Gestionnaire Bureau' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Fournisseurs</a>
                                <a href="{% url 'commandes_bureau:liste_commandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Commandes Bureau</a>
                                <a href="{% url 'materiel_bureautique:liste_materiels' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mat√©riel Bureautique</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Traiter Demandes</a>
                            {% elif group.name == 'Gestionnaire Informatique' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Fournisseurs</a>
                                <a href="{% url 'materiel_informatique:liste_materiels' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mat√©riel Informatique</a>
                                <a href="{% url 'commandes_informatique:liste_commandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Commandes IT</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Traiter Demandes</a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    <a href="{% url 'materiel_informatique:mes_equipements_informatiques' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mes √©quipements IT</a>
                    <a href="{% url 'materiel_bureautique:mes_equipements_bureautiques' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mes √©quipements Bureau</a>
                    <a href="{% url 'users:dashboard_garantie' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">üõ°Ô∏è Dashboard Garantie</a>
                    <a href="{% url 'chatbot:chatbot-ui' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Chatbot IA</a>
                    <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="block px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-800 hover:bg-red-50">Se d√©connecter</a>
                </div>
            </div>
        </div>
        <form id="logout-form" action="{% url 'logout' %}" method="post" style="display: none;">
            {% csrf_token %}
        </form>
    </nav>

    <!-- Contenu principal -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- En-t√™te -->
        <div class="mb-8 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Gestion des Fournisseurs</h1>
            <p class="text-lg text-gray-600">G√©rez la liste des fournisseurs partenaires</p>
            <div class="mt-4 inline-flex items-center px-4 py-2 bg-indigo-100 text-indigo-800 rounded-full text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                Total : <span class="font-semibold ml-1">{{ total }}</span> fournisseur{{ total|pluralize:"s" }}
            </div>
        </div>

        <!-- Barre d'actions -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
            <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                <div class="flex gap-3">
                    <a href="{% url 'fournisseurs:fournisseur_create' %}"
                       class="bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 flex items-center gap-2 card-hover">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Ajouter un fournisseur
                    </a>
                    <a href="{% url 'fournisseurs:exporter_excel' %}"
                       class="bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 flex items-center gap-2 card-hover">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 3v18m9-9H3"></path>
                        </svg>
                        Exporter Excel
                    </a>
                </div>
                <div class="relative">
                    <input type="search" placeholder="üîç Rechercher un fournisseur..."
                           class="w-80 border border-gray-300 rounded-lg px-4 py-3 pl-10 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200 shadow-sm"
                           x-model="search" />
                    <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Tableau des fournisseurs -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gradient-to-r from-indigo-600 to-blue-600 text-white">
                        <tr>
                            <th class="px-6 py-4 text-left font-semibold text-sm uppercase tracking-wider">Nom</th>
                            <th class="px-6 py-4 text-left font-semibold text-sm uppercase tracking-wider">IF Fiscal</th>
                            <th class="px-6 py-4 text-left font-semibold text-sm uppercase tracking-wider">ICE</th>
                            <th class="px-6 py-4 text-left font-semibold text-sm uppercase tracking-wider">RC</th>
                            <th class="px-6 py-4 text-left font-semibold text-sm uppercase tracking-wider">Adresse</th>
                            <th class="px-6 py-4 text-center font-semibold text-sm uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% for fournisseur in fournisseurs %}
                        <tr x-data="{ nom: '{{ fournisseur.nom|escapejs }}'.toLowerCase() }"
                            x-show="nom.includes(search.toLowerCase()) || search === ''"
                            class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
                                        <span class="text-indigo-600 font-semibold text-sm">{{ fournisseur.nom|first|upper }}</span>
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-gray-900">{{ fournisseur.nom }}</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ fournisseur.if_fiscal|default:"-" }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ fournisseur.ice|default:"-" }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ fournisseur.registre_commerce|default:"-" }}</td>
                            <td class="px-6 py-4 text-sm text-gray-900 max-w-xs truncate">{{ fournisseur.adresse|default:"-" }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="flex justify-center space-x-2">
                                    <a href="{% url 'fournisseurs:fournisseur_update' fournisseur.pk %}"
                                       class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                        Modifier
                                    </a>
                                    <button @click="if(confirm('√ätes-vous s√ªr de vouloir supprimer {{ fournisseur.nom }} ?')) { $refs['form-delete-{{ fournisseur.pk }}'].submit() }"
                                            class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                        Supprimer
                                    </button>
                                    <form method="post" action="{% url 'fournisseurs:fournisseur_delete' fournisseur.pk %}"
                                          class="hidden" x-ref="form-delete-{{ fournisseur.pk }}">
                                        {% csrf_token %}
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% empty %}
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="text-gray-500">
                                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                    </svg>
                                    <h3 class="mt-2 text-sm font-medium text-gray-900">Aucun fournisseur</h3>
                                    <p class="mt-1 text-sm text-gray-500">Commencez par ajouter votre premier fournisseur.</p>
                                    <div class="mt-6">
                                        <a href="{% url 'fournisseurs:fournisseur_create' %}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
                                            </svg>
                                            Ajouter un fournisseur
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</body>
</html>