{% load static %}
{% load widget_tweaks %}
<!DOCTYPE html>
<html lang="fr" x-data="{ mobileMenuOpen: false }" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if form.instance.pk %}Modifier{% else %}Ajouter{% endif %} un fournisseur - ParcInfo</title>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{% static 'css/parcinfo-ui.css' %}">
  <link rel="stylesheet" href="{% static 'react/assets/index.css' %}">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .dashboard-gradient-bg {
            background: linear-gradient(120deg, #f0f4ff 0%, #e0e7ff 100%);
        }
        .nav-link {
            transition: all 0.2s ease;
        }
        .nav-link:hover {
            background: rgba(99, 102, 241, 0.1);
            transform: translateX(4px);
        }
        .form-input {
            transition: all 0.2s ease;
        }
        .form-input:focus {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.15);
        }
    </style>
</head>
<body class="dashboard-gradient-bg min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg border-b border-gray-200" x-data="{ mobileMenuOpen: false }">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo et titre -->
                <div class="flex items-center space-x-4">
                    <img src="{% static 'images/ADD.png' %}" alt="ADD Logo" class="h-10 w-auto">
                    <span class="text-xl font-bold text-gray-900">ParcInfo</span>
                </div>
                
                <!-- Menu desktop -->
                <div class="hidden md:flex items-center space-x-6">
                    <a href="{% url 'users:profil' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mon profil</a>
                    
                    <!-- Menu selon le r√¥le -->
                    {% if user.groups.all %}
                        {% for group in user.groups.all %}
                            {% if group.name == 'Gestionnaire Bureau' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link text-indigo-600 bg-indigo-50 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Fournisseurs</a>
                                <a href="{% url 'commandes_bureau:liste_commandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Commandes Bureau</a>
                                <a href="{% url 'materiel_bureautique:liste_materiels' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mat√©riel Bureautique</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Traiter Demandes</a>
                            {% elif group.name == 'Gestionnaire Informatique' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link text-indigo-600 bg-indigo-50 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Fournisseurs</a>
                                <a href="{% url 'materiel_informatique:liste_materiels' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mat√©riel Informatique</a>
                                <a href="{% url 'commandes_informatique:liste_commandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Commandes IT</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Traiter Demandes</a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    <a href="{% url 'materiel_informatique:mes_equipements_informatiques' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mes √©quipements IT</a>
                    <a href="{% url 'materiel_bureautique:mes_equipements_bureautiques' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Mes √©quipements Bureau</a>
                    <a href="{% url 'users:dashboard_garantie' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">üõ°Ô∏è Dashboard Garantie</a>
                    <a href="{% url 'chatbot:chatbot-ui' %}" class="nav-link text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium transition-colors duration-200">Chatbot IA</a>
                    
                    <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="text-red-600 hover:text-red-800 font-medium transition">Se d√©connecter</a>
                </div>
                
                <!-- Bouton menu mobile -->
                <div class="md:hidden">
                    <button @click="mobileMenuOpen = !mobileMenuOpen"
                            class="text-gray-700 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-inset rounded-md p-2">
                        <svg class="w-6 h-6" :class="{'hidden': mobileMenuOpen, 'block': !mobileMenuOpen}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                        <svg class="w-6 h-6" :class="{'block': mobileMenuOpen, 'hidden': !mobileMenuOpen}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>
            </div>
            
            <!-- Menu mobile -->
            <div x-show="mobileMenuOpen"
                 x-transition:enter="transition ease-out duration-200"
                 x-transition:enter-start="opacity-0 transform scale-95"
                 x-transition:enter-end="opacity-100 transform scale-100"
                 x-transition:leave="transition ease-in duration-150"
                 x-transition:leave-start="opacity-100 transform scale-100"
                 x-transition:leave-end="opacity-0 transform scale-95"
                 class="md:hidden border-t border-gray-200">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="{% url 'users:profil' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mon profil</a>
                    
                    {% if user.groups.all %}
                        {% for group in user.groups.all %}
                            {% if group.name == 'Gestionnaire Bureau' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Fournisseurs</a>
                                <a href="{% url 'commandes_bureau:liste_commandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Commandes Bureau</a>
                                <a href="{% url 'materiel_bureautique:liste_materiels' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mat√©riel Bureautique</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Traiter Demandes</a>
                            {% elif group.name == 'Gestionnaire Informatique' %}
                                <a href="{% url 'fournisseurs:fournisseur_list' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-indigo-600 bg-indigo-50">Fournisseurs</a>
                                <a href="{% url 'materiel_informatique:liste_materiels' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mat√©riel Informatique</a>
                                <a href="{% url 'commandes_informatique:liste_commandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Commandes IT</a>
                                <a href="{% url 'livraison:liste_livraisons' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Livraisons</a>
                                <a href="{% url 'demande_equipement:liste_toutes_demandes' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Traiter Demandes</a>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    <a href="{% url 'materiel_informatique:mes_equipements_informatiques' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mes √©quipements IT</a>
                    <a href="{% url 'materiel_bureautique:mes_equipements_bureautiques' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Mes √©quipements Bureau</a>
                    <a href="{% url 'users:dashboard_garantie' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">üõ°Ô∏è Dashboard Garantie</a>
                    <a href="{% url 'chatbot:chatbot-ui' %}" class="nav-link block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-indigo-50">Chatbot IA</a>
                    <a href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="block px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-800 hover:bg-red-50">Se d√©connecter</a>
                </div>
            </div>
        </div>
        <form id="logout-form" action="{% url 'logout' %}" method="post" style="display: none;">
            {% csrf_token %}
        </form>
    </nav>

    <!-- Contenu principal -->
    <main class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- En-t√™te -->
        <div class="mb-8 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">
      {% if form.instance.pk %}Modifier{% else %}Ajouter{% endif %} un fournisseur
    </h1>
            <p class="text-lg text-gray-600">
                {% if form.instance.pk %}
                    Modifiez les informations du fournisseur existant
                {% else %}
                    Remplissez le formulaire pour ajouter un nouveau fournisseur
                {% endif %}
            </p>
        </div>

        <!-- Formulaire -->
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-200 bg-gradient-to-r from-indigo-50 to-blue-50">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900">
                            Informations du fournisseur
                        </h2>
                        <p class="text-gray-600">
                            {% if form.instance.pk %}
                                Modifiez les informations ci-dessous
                            {% else %}
                                Remplissez tous les champs obligatoires
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>

            <form method="post" class="p-8 space-y-6">
      {% csrf_token %}
                
      {% if form.errors %}
                <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">Erreurs de validation</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <ul class="list-disc list-inside space-y-1">
            {% for field in form %}
              {% for error in field.errors %}
                <li><strong>{{ field.label }}:</strong> {{ error }}</li>
              {% endfor %}
            {% endfor %}
            {% for error in form.non_field_errors %}
              <li>{{ error }}</li>
            {% endfor %}
          </ul>
        </div>
                        </div>
                    </div>
                </div>
                {% endif %}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nom -->
                    <div class="md:col-span-2">
                        <label for="{{ form.nom.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.nom.label }} <span class="text-red-500">*</span>
                        </label>
                        {{ form.nom|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.nom.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.nom.help_text }}</p>
                        {% endif %}
                    </div>

                    <!-- IF Fiscal -->
                    <div>
                        <label for="{{ form.if_fiscal.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.if_fiscal.label }}
                        </label>
                        {{ form.if_fiscal|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.if_fiscal.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.if_fiscal.help_text }}</p>
                        {% endif %}
                    </div>

                    <!-- ICE -->
                    <div>
                        <label for="{{ form.ice.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.ice.label }}
                        </label>
                        {{ form.ice|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.ice.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.ice.help_text }}</p>
                        {% endif %}
                    </div>

                    <!-- Registre Commerce -->
                    <div>
                        <label for="{{ form.registre_commerce.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.registre_commerce.label }}
                        </label>
                        {{ form.registre_commerce|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.registre_commerce.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.registre_commerce.help_text }}</p>
      {% endif %}
                    </div>

                    <!-- T√©l√©phone -->
        <div>
                        <label for="{{ form.telephone.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.telephone.label }}
                        </label>
                        {{ form.telephone|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.telephone.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.telephone.help_text }}</p>
          {% endif %}
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="{{ form.email.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.email.label }}
                        </label>
                        {{ form.email|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.email.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.email.help_text }}</p>
              {% endif %}
                    </div>

                    <!-- Adresse -->
                    <div class="md:col-span-2">
                        <label for="{{ form.adresse.id_for_label }}" class="block text-sm font-medium text-gray-700 mb-2">
                            {{ form.adresse.label }}
                        </label>
                        {{ form.adresse|add_class:"form-input w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all duration-200" }}
                        {% if form.adresse.help_text %}
                            <p class="text-xs text-gray-500 mt-1">{{ form.adresse.help_text }}</p>
          {% endif %}
        </div>
                </div>

                <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                    <a href="{% url 'fournisseurs:fournisseur_list' %}" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Annuler
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        {% if form.instance.pk %}Mettre √† jour{% else %}Enregistrer{% endif %}
        </button>
      </div>
    </form>
        </div>
    </main>
</body>
</html>