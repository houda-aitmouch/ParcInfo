{% load static %}
<!DOCTYPE html>
<html lang="fr" x-data="profileCard" x-init="init()">
<head>
    <meta charset="UTF-8">
    <title>Profil | ADD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Styles -->
    <link href="{% static 'css/profile.css' %}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      body { font-family: 'Inter', sans-serif; }
      .profile-bg {
        background: linear-gradient(120deg, #f1f5f9 0%, #e0e7ef 100%);
        min-height: 100vh;
      }
      .profile-card {
        background: rgba(255,255,255,0.92);
        box-shadow: 0 8px 32px 0 rgba(99,102,241,0.10), 0 1.5px 6px 0 rgba(6,182,212,0.06);
        border-radius: 2rem;
        max-width: 400px;
        margin: 3rem auto;
        padding: 2.5rem 2rem 2rem 2rem;
        backdrop-filter: blur(8px);
        border: 1.5px solid #e0e7ef;
        position: relative;
        transition: box-shadow 0.2s;
      }
      .profile-card:hover {
        box-shadow: 0 12px 40px 0 rgba(99,102,241,0.16), 0 2px 8px 0 rgba(6,182,212,0.08);
      }
      .avatar {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem auto;
        background: linear-gradient(135deg, #6366f1 0%, #06b6d4 100%);
        color: #fff;
        font-size: 2.5rem;
        font-weight: 700;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 16px 0 rgba(99,102,241,0.12);
        border: 4px solid #fff;
        position: relative;
        z-index: 2;
        letter-spacing: 1px;
      }
      .profile-card h2 {
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(90deg, #6366f1, #06b6d4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1.5rem;
        letter-spacing: 0.5px;
      }
      .profile-details {
        margin-bottom: 2rem;
        color: #374151;
        font-size: 1.05rem;
      }
      .profile-details strong {
        color: #2563eb;
        font-weight: 600;
      }
      .profile-details span {
        color: #0e7490;
        font-weight: 500;
      }
      .actions {
        text-align: center;
      }
      .logout-link {
        display: inline-block;
        background: linear-gradient(90deg, #6366f1, #06b6d4);
        color: #fff;
        font-weight: 600;
        padding: 0.7rem 2.2rem;
        border-radius: 9999px;
        box-shadow: 0 2px 8px 0 rgba(99,102,241,0.10);
        text-decoration: none;
        transition: background 0.2s, box-shadow 0.2s;
        letter-spacing: 0.03em;
      }
      .logout-link:hover {
        background: linear-gradient(90deg, #06b6d4, #6366f1);
        box-shadow: 0 4px 16px 0 rgba(99,102,241,0.14);
      }
      .navbar {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 1.2rem 2rem 0.5rem 2rem;
        background: transparent;
      }
      .logo {
        height: 48px;
        width: auto;
        filter: drop-shadow(0 2px 8px rgba(99,102,241,0.10));
      }
    </style>

    <!-- Alpine.js -->
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
    <script defer src="{% static 'js/profile.js' %}"></script>  <link rel="stylesheet" href="{% static 'css/parcinfo-ui.css' %}">
  <link rel="stylesheet" href="{% static 'react/assets/index.css' %}">
</head>
<body class="profile-bg font-sans antialiased">

    <!-- Navbar -->
    <nav class="navbar">
        <img src="{% static 'images/ADD.png' %}" alt="Logo ADD" class="logo">
    </nav>

    <!-- Profil utilisateur -->
    <section class="profile-card" x-show="open" x-transition>
        <div class="text-center">
            <div class="avatar">
                <span>{{ user.username|slice:":1"|upper }}</span>
            </div>
            <h2>Profil de l'utilisateur</h2>
        </div>
        <div class="profile-details">
            <p><strong>Nom d'utilisateur :</strong> <span>{{ user.username }}</span></p>
            <p><strong>Email :</strong> <span>{{ user.email }}</span></p>
            <p><strong>Nom complet :</strong> <span>{{ user.get_full_name }}</span></p>
            <p><strong>Rôles :</strong>
                {% for group in user.groups.all %}
                    <span>{{ group.name }}</span>{% if not forloop.last %}, {% endif %}
                {% empty %}
                    <span class="text-gray-500">Aucun rôle attribué</span>
                {% endfor %}
            </p>
        </div>
        <div class="actions">
            <a href="#" class="logout-link">Déconnexion</a>
        </div>
    </section></body>
</html>