# Configuration de production pour ParcInfo
DEBUG=False
SECRET_KEY=your-production-secret-key-here-change-this
DATABASE_URL=postgresql://parcinfo:parcinfo_password@db:5432/parcinfo

# Configuration email (optionnel)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Configuration Redis (optionnel)
REDIS_URL=redis://redis:6379/0

# Configuration du chatbot
CHATBOT_ENABLED=True
OLLAMA_URL=http://ollama:11434

# Configuration des fichiers statiques
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Configuration de sécurité
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,http://localhost:8000
