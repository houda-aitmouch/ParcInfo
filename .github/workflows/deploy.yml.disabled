name: Deploy

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    env:
      REGISTRY: ghcr.io
      IMAGE_BACKEND: ghcr.io/${{ github.repository_owner }}/parcinfo-backend
      IMAGE_FRONTEND: ghcr.io/${{ github.repository_owner }}/parcinfo-frontend
      IMAGE_CHATBOT: ghcr.io/${{ github.repository_owner }}/parcinfo-chatbot
    steps:
      - uses: actions/checkout@v4

      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build images
        run: |
          docker build -f Dockerfile.backend -t $IMAGE_BACKEND:latest .
          docker build -f Dockerfile.frontend -t $IMAGE_FRONTEND:latest .
          docker build -f Dockerfile.chatbot -t $IMAGE_CHATBOT:latest .

      - name: Push images
        run: |
          docker push $IMAGE_BACKEND:latest
          docker push $IMAGE_FRONTEND:latest
          docker push $IMAGE_CHATBOT:latest

      - name: Deploy over SSH
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ${{ secrets.SSH_USER }}
          key: ${{ secrets.SSH_KEY }}
          script: |
            cd /opt/parcinfo
            git pull --rebase
            docker compose pull || true
            docker compose up -d --remove-orphans
            docker system prune -f


